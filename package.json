{
  "repository": {
    "type": "git",
    "url": "https://github.com/mhansen/hledger-vscode.git"
  },
  "name": "hledger-vscode",
  "displayName": "hledger-vscode",
  "description": "Language support for HLedger accounting journals.",
  "version": "0.0.9",
  "publisher": "mark-hansen",
  "engines": {
    "vscode": "^1.14.0"
  },
  "scripts": {
    "test": "mocha -r ts-node/register tests/test.ts",
    "goldens": "ts-node tests/main.ts tests/cases/*.in.hledger"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "HLedger",
          "hledger"
        ],
        "extensions": [
          ".hledger",
          ".journal",
          ".journal.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "minimist": "^1.2.7",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vscode-oniguruma": "^1.6.2",
    "vscode-textmate": "^7.0.3"
  }
}
