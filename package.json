{
  "repository": {
    "type": "git",
    "url": "https://github.com/mhansen/hledger-vscode.git"
  },
  "name": "hledger-vscode",
  "displayName": "hledger-vscode",
  "description": "Language support for HLedger accounting journals.",
  "version": "0.0.2",
  "publisher": "mark-hansen",
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "HLedger",
          "hledger"
        ],
        "extensions": [
          ".hledger",
          ".journal",
          ".journal.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^2.2.41",
    "minimist": "^1.2.3",
    "mocha": "^3.4.2",
    "vscode-textmate": "^3.1.5"
  }
}
